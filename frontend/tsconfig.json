{
    "compilerOptions": {
        "target": "es6",
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "esnext",
        "ignoreDeprecations": "6.0",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
    },
    "include": [
        "src/**/*"
    ],
}